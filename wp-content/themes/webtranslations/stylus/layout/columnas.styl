/*
Columnas generales y sobre todo las del sitio web
*/
	
.columna--right
	display none

@media all and (min-width:50em)
	.columnas__2
		article
			display inline-block
			margin-right 1%
			vertical-align top
			width 48%
		article + article
			margin-right 0
		/*column-count 2
		column-gap 2em
		padding 0.5em 0*/

	
	.columna--left
	.columna--right
		display inline-block
		margin-top auto
		vertical-align top

	// Para el main 
	.columna--left
		width 49%

	// Sidebar derecha
	.columna--right
		margin-left 1%
		padding 0.5em 0 0 0
		width 49%