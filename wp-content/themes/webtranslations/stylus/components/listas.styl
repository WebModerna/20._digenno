// Listas
ol
ul
	list-style-position inside
	
ol
	counter-reset item
	list-style none
	line-height 2em
	li
		&:before
			content counter(item) " )"
			counter-increment item
			color $rosa
			display inline
			// font-family 'Open Sans Condensed', 'Helvetica', sans-serif
			font-weight bolder
			margin-right 0.5em
	
/*ul
	list-style-image url("data:image/png;base64,")*/
ul
	list-style none
	li
		&:before
			color $rosa
			content "\e600"
			font-family 'icon'
			margin-right 0.5em
	

.listado__servicios
	ul
		font-size 1.5em
		list-style none
		margin 0
		padding 0
		li
			img
				display inline-block
				vertical-align middle
				

// Listas horizontales separadas por una barra
.ul_horizontal
	li
		display inline-block
	li + li
		border-left 1px dotted $silver

.sd-content
	ul
		li
			&:before
				content ""
				margin-right auto
			a
				font-style normal